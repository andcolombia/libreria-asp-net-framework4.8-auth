
@{
    ViewBag.Title = "Index";
}

<h3>Main Claims:</h3>
<table class="table table-striped table-bordered table-hover">
    <tr><td>Name</td><td>@ViewBag.Name</td></tr>
    <tr><td>Username</td><td>@ViewBag.Username</td></tr>
    <tr><td>Subject</td><td>@ViewBag.Subject</td></tr>
    <tr><td>TenantId</td><td>@ViewBag.TenantId</td></tr>
</table>
<br />
<h3>User Additional Claims (Information Client):</h3>
<table class="table table-striped table-bordered table-hover table-condensed">
    @foreach (var claim in ViewBag.userClaims)
    {
        <tr><td>@claim.Type</td><td>@claim.Value</td></tr>
    }
</table>
<br />
<h3>All security Claims:</h3>
<table class="table table-striped table-bordered table-hover table-condensed">
    @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
    {
        <tr><td>@claim.Type</td><td>@claim.Value</td></tr>
    }
</table>
@Html.ActionLink("Personalizar", "Personalizar", "Claims", null, new { @class = "btn btn-info" })
<br />
<br />
@Html.ActionLink("Sign out", "SignOut", "Home", null, new { @class = "btn btn-danger" })

